<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="ButtonBorderGradientStyle" StartPoint="1, 0" EndPoint="1, 1">
        <GradientStop Color="{ StaticResource LightGrayColor }" Offset="0" />
        <GradientStop Color="{ StaticResource DarkGrayColor }" Offset="0.8" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InverseButtonBorderGradientStyle" StartPoint="1, 0" EndPoint="1, 1">
        <GradientStop Color="{ StaticResource DarkGrayColor }" Offset="0" />
        <GradientStop Color="{ StaticResource LightGrayColor }" Offset="0.8" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ListViewItemBackgroundGradientStyle" StartPoint="0, 0" EndPoint="0, 1">
        <GradientStop Color="{ StaticResource DarkGrayColor }" Offset="0" />
        <GradientStop Color="{ StaticResource DarkGrayColor }" Offset="0.95" />
        <GradientStop Color="{ StaticResource DarkGrayColor }" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ListViewItemBorderGradientStyle" StartPoint="1, 0" EndPoint="1, 1">
        <GradientStop Color="Transparent" Offset="0" />
        <GradientStop Color="Transparent" Offset="0.8" />
    </LinearGradientBrush>

</ResourceDictionary>