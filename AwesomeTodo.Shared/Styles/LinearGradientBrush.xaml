<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="ButtonBorderGradientStyle" StartPoint="1, 0" EndPoint="1, 1">
        <GradientStop Color="{ StaticResource LightGrayColor }" Offset="0" />
        <GradientStop Color="{ StaticResource DarkGrayColor }" Offset="0.8" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InverseButtonBorderGradientStyle" StartPoint="1, 0" EndPoint="1, 1">
        <GradientStop Color="{ StaticResource DarkGrayColor }" Offset="0" />
        <GradientStop Color="{ StaticResource LightGrayColor }" Offset="0.8" />
    </LinearGradientBrush>

</ResourceDictionary>