<Window x:Class="AwesomeTodo.MainModule.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        TextOptions.TextFormattingMode="Display"
        RenderOptions.ClearTypeHint="Enabled"
        RenderOptions.BitmapScalingMode="NearestNeighbor"
        ResizeMode="CanResize"
        MinHeight="300"
        MinWidth="320"
        MaxHeight="900"
        MaxWidth="700"
        Height="520"
        Width="340"
        Title="ShellWindow">
    <Window.Effect>
        <DropShadowEffect Color="Gray" BlurRadius="20" Direction="-90" RenderingBias="Quality" ShadowDepth="4" />
    </Window.Effect>
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="4" CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    <DockPanel MouseDown="DockPanel_MouseDown" Background="Blue">
        <Border DockPanel.Dock="Top" Padding="10" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="70" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" MinWidth="70" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="&lt;" Width="30" Height="30" />
                    <Button Content="&gt;" Width="30" Height="30" />
                </StackPanel>

                <Label Grid.Column="1" Content="{ Binding Path=Title, FallbackValue='AppName' }" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />

                <Button Grid.Column="2" Content="X" Width="30" Height="30" HorizontalAlignment="Right" />
            </Grid>
        </Border>

        <DockPanel DockPanel.Dock="Top">
            <TextBox DockPanel.Dock="Top" />
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Add" />
                <Button Grid.Column="1" Content="Del" />
                <Button Grid.Column="2" Content="Clr" />
            </Grid>
            <ListView DockPanel.Dock="Top">
                <ListViewItem>Item #1</ListViewItem>
                <ListViewItem>Item #2</ListViewItem>
                <ListViewItem>Item #3</ListViewItem>
            </ListView>
        </DockPanel>
    </DockPanel>
</Window>
